# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index
GET     /ws                         controllers.HomeController.ws
GET     /sentiment/:symbol          controllers.StockSentiment.get(symbol)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /monkey/all_surveys         controllers.MonkeyController.allSurveys
GET     /monkey/surveys/:bannerId controllers.MonkeyController.surveyMetadata(bannerId)
GET     /monkey                     controllers.MonkeyController.monkeyHome